<p class="name-title text-white text-center mt-4"><%= @vehicle.name %></p>

<div class="parent">
    <div class="div1">
      <%= cl_image_tag @vehicle.photos[0].key, height: "100%", width: "100%" %>
    </div>
    <div class="div2 ">
      <%= cl_image_tag @vehicle.photos[1].key, height: "100%", width: "100%" %>
    </div>
    <div class="div3 ">
      <%= cl_image_tag @vehicle.photos[2].key, height: "100%", width: "100%" %>
    </div>
    <div class="div4 ">
      <%= cl_image_tag @vehicle.photos[3].key, height: "100%", width: "100%"  %>
    </div>
    <div class="div5 ">
      <%= cl_image_tag @vehicle.photos[4].key, height: "100%", width: "100%" %>
    </div>
</div>


<div class="row mt-5 mx-3 mb-3">
  <div class="col-sm-8 ">
    <div class="card bg-transparent">
      <div class="card-body text-white">
          <div class="card bg-transparent">
              <div class="d-flex justify-content-between mb-3 border-bottom">
                <div>
                  <p class="text-start"><%= @vehicle.description %></p>
                </div>
                  <div class="d-flex justify-content-between">
                    <div class="pb-3">
                      <img class="avatar-large" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
                    </div>
                  <div>
                  <p class="text-right">John Doe</p>
                </div>
              </div>
            </div>
          </div>

          <dl>
            <dt class="col-sm-3">Year</dt>
            <dd class="col-sm-9"><%= @vehicle.year %></dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9"><%= @vehicle.category %></dd>

            <dt class="col-sm-3">Available</dt>
            <dd class="col-sm-9"><%= @vehicle.available ? "Yes" : "Not for the moment" %></dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9"><%= @vehicle.price_per_day %></dd>

          </dl>
        </div>
      </div>
    </div>


  <div class="col-sm-4">
    <div class="card bg-dark">
      <div class="card-body">
        <div class="text-center mt-0">
          <h3 class="font-weight-bold text-white">Choose your dates</h3>
        </div>
          <div class="text-center text-white">
            <%= simple_form_for [@vehicle, @booking] do  |f| %>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
              <div class="text-center">
                <%= f.button :submit, 'Rent', class: "text-center btn btn-danger" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


